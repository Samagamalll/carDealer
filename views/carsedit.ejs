<!Doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/nav.css" rel="stylesheet">
    <link href="/css/profile.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Editing Cars</title>

    <script>
        /* this function to appear and hide info options */

        document.addEventListener('DOMContentLoaded', function () {
            var select1 = document.querySelector(".name");
            var select2 = document.querySelector(".container1");

            select1.addEventListener('click', function () {
                if (select2.classList.contains('hidden'))
                    select2.classList.remove('hidden');
                else
                    select2.classList.add('hidden');
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            var select1 = document.querySelector(".upload-button");
            var select2 = document.querySelector(".container2");

            select1.addEventListener('click', function () {
                if (select2.classList.contains('hidden'))
                    select2.classList.remove('hidden');
                else
                    select2.classList.add('hidden');
            });
        });


        /* This function hide the upload form */

        document.addEventListener('DOMContentLoaded', function () {
            var select1 = document.querySelector(".X");
            var select2 = document.querySelector(".container2");

            select1.addEventListener('click', function () {
                select2.classList.add('hidden')
            });
        })
    </script>

</head>

<body>


    <%- include("./partials/navbar.ejs") %>

        <div class="" style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
            <h1>Cars Page</h1>
            <button class="Edit-button"> <a href="/addcar"> Add Car </a></button>
        </div>

        <hr>

        <div class="" style="">
            <% cars.forEach(function(car) { %>
                <main class="">
                    <div class="card">
                        <form action="/carsedit" method="post">
                            <div class="profileinfo">
                                <h2>
                                    <%= car.Name + ' ' + car.Model %>
                                </h2>
                            </div>
                            <div style="display: flex;flex-direction: row;justify-content: center;align-items: center;">
                                <div>
                                    <div class="">
                                        <h5>Car ID</h5>
                                        <input type="text" name="carID" value="<%= car._id %>" readonly required>
                                    </div>
                                    <div class="">
                                        <h5>Car Name</h5>
                                        <input type="text" name="carName" value="<%= car.Name %>" required>
                                    </div>
                                    <div class="">
                                        <h5>Car Brand</h5>
                                        <input type="text" name="carModel" value="<%= car.Model %>" required>
                                    </div>
                                    <div class="">
                                        <h5>Price</h5>
                                        <input type="number" name="carPrice" value="<%= car.Price %>" required>
                                    </div>
                                    <div class="">
                                        <h5>Color</h5>
                                        <input type="text" name="carColor" value="<%= car.Color %>" required>
                                    </div>
                                    <div class="">
                                        <h5>Engine</h5>
                                        <input type="text" name="carEngine" value="<%= car.Engine %>" required>
                                    </div>
                                    <div class="">
                                        <h5>Power</h5>
                                        <input type="text" name="carPower" value="<%= car.Power %>" required>
                                    </div>
                                    <div class="">
                                        <h5>Transmission</h5>
                                        <input type="text" name="carTransmission" value="<%= car.Transmission %>" required>
                                    </div>
                                    <div class="">
                                        <h5>Fuel</h5>
                                        <input type="text" name="carFuel" value="<%= car.Fuel %>" required>
                                    </div>
                                    <div class="">
                                        <h5>Year</h5>
                                        <input type="number" name="carYear" value="<%= car.Year %>" required>
                                    </div>
                                    <div class="">
                                        <h5>Car Photo</h5>
                                        <input type="text" id="imgurl" name="imgurl" value="<%= car.Image %>" required>
                                    </div>
                                    <div class="">
                                        <% let date=new Date(car.createdAt); let
                                            formattedDate=date.toLocaleDateString('en-US'); let
                                            formattedTime=date.toLocaleTimeString('en-US'); let
                                            formattedDateTime=`${formattedDate} ${formattedTime}`; %>
                                            <h5>Added: <%= formattedDateTime %>
                                            </h5>
                                    </div>

                                    <div class="">
                                        <h5>Action</h5>
                                        <select name="methodtype" id="methodtype">
                                            <option>update</option>
                                            <option>delete</option>
                                        </select>
                                    </div>
                                </div>


                            </div>
                            <div class="buttons">
                                <button type="submit" class="btnone">Apply Changes</button>
                            </div>
                        </form>
                    </div>
                </main>
                <% }); %>
        </div>

        <span class="clearfix"></span>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>